{% sw_extends '@Storefront/storefront/block/cms-block-image-text.html.twig' %}

{% block block_image_text_left %}
    {% set element = block.slots.getSlot('left-image') %}

    <div class="col-md-6" data-cms-element-id="{{ element.id }}">
        {% block block_image_text_leftimage_inner %}
            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
        {% endblock %}
    </div>
{% endblock %}

{% block block_image_text_right %}
    {% set element = block.slots.getSlot('top-right') %}

    <div class="col-md-6" data-cms-element-id="{{ element.id }}">
        {% block block_image_text_topright_inner %}
            {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
        {% endblock %}

        {% block block_image_text_bottomright %}
            {% set element = block.slots.getSlot('bottom-right') %}

            <div class="" data-cms-element-id="{{ element.id }}">
                {% block block_image_text_bottomright_inner %}
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                {% endblock %}
            </div>
        {% endblock %}
    </div>
    
{% endblock %}
