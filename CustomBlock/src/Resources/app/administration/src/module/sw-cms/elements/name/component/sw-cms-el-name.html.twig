{% block sw_cms_element_name %}
    <div class="sw-cms-el-name">
        <div class="sw-cms-el-name__mapping-preview content-editor"
             v-html="$sanitize(demoValue)"
             v-if="element.config.content.source === 'mapped'">
        </div>

        <sw-text-editor v-else
                        :disabled="disabled"
                        v-model="element.config.content.value"
                        @blur="onBlur"
                        @input="onInput"
                        :verticalAlign="element.config.verticalAlign.value"
                        :allowInlineDataMapping="true"
                        :isInlineEdit="true">
        </sw-text-editor>
    </div>
{% endblock %}
